{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs", // Ensure it's set to 'commonjs' for Node.js compatibility
    "outDir": "./dist", // Ensure compiled JS is output to 'dist'
    "rootDir": "./src", // Ensure the source files are in 'src'
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
